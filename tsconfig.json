{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "outDir": "dist",
    "allowJs": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "noUnusedLocals": true,
    "lib": [
      "ES2019",
      "ES2020.BigInt",
      "ES2020.String",
      "ES2020.Symbol.WellKnown"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.js",
    "config.json"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "www"
  ]
}